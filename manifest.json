{
    "manifest_version": 2,

    "name": "KnowIt!",
    "description": "We need a slogan",
    "version": "0.0.1",

    "browser_action": {
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["popup.css"]
        }
    ],

    "permissions": [
        "activeTab",
        "contextMenus"
    ]
}
